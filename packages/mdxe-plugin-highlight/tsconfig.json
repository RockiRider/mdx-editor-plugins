{
    "compilerOptions": {
      "jsx": "react",
      "module": "ESNext",
      "target": "esnext",
      "moduleResolution": "Bundler",
      "strict": true,
      "declaration": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "lib": ["dom", "esnext"],
      "types": ["node"],
      "noEmitOnError": true,
    },
    "include": ["src/**/*"],
    "exclude": ["**/dist", "**/node_modules"]
  }